<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.fragment.mainScreen.AboutMeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back_arrow"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:id="@+id/imvBack"/>

            <androidx.cardview.widget.CardView
                android:layout_width="290dp"
                android:layout_height="300dp"
                app:cardCornerRadius="30dp"
                android:elevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/pf"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/primaryColor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aung Pyae Kyaw"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/switzer_bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(aungkyae32@gmail.com)"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/supreme_regular"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:id="@+id/imvFacebook"
                            android:src="@drawable/facebook"
                            android:layout_margin="20dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/imvInstagram"
                            android:src="@drawable/instagram"
                            android:layout_margin="20dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/imvPhone"
                            android:src="@drawable/phone"
                            android:layout_margin="20dp"
                            android:layout_weight="1"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/imvGitHub"
                            android:src="@drawable/git"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/whiteBlue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About me!"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/supreme_regular"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/whiteBlue"
                android:layout_marginTop="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aboutMe"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/supreme_regular"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/whiteBlue"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>